    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>controller.customer.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartServlet</servlet-name>
        <servlet-class>controller.customer.UpdateCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>controller.customer.CheckoutServlet</servlet-class>
